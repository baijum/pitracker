<h1 class="page-header">New Item</h1>
<form class="form-horizontal" role="form">
  <div class="form-group form-group-lg">
    <label class="col-sm-2 control-label" for="title">Title</label>
    <div class="col-sm-10">
      {{input value=title id="title" placeholder="Title" required="true" class="form-control" }}
    </div>
  </div>
  <div class="form-group form-group-lg">
    <label class="col-sm-2 control-label" for="description">Description</label>
    <div class="col-sm-10">
      {{textarea value=description id="description" rows="7" placeholder="Description" required="true" class="form-control" }}
    </div>
  </div>

  <a class="btn btn-success btn-lg" href="#" role="button" {{action "createItem"}}>Create Item</a>

</form>
