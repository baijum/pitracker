<h1 class="page-header">New Project</h1>
<form class="form-horizontal" role="form">
  <div class="form-group form-group-lg">
    <label class="col-sm-2 control-label" for="name">Project Name</label>
    <div class="col-sm-10">
      {{input valueBinding="name" id="name" placeholder="Name" required="true" class="form-control" }}
    </div>
  </div>
  <div class="form-group form-group-lg">
    <label class="col-sm-2 control-label" for="_id">Project ID</label>
    <div class="col-sm-10">
      {{input valueBinding="_id" id="_id" placeholder="ID" required="true" class="form-control" }}
    </div>
  </div>
  <div class="form-group form-group-lg">
    <label class="col-sm-2 control-label" for="description">Description</label>
    <div class="col-sm-10">
      {{textarea valueBinding="description" id="description" rows="7" placeholder="Description" required="true" class="form-control" }}
    </div>
  </div>

  <a class="btn btn-success btn-lg" href="#" role="button" {{action "createProject"}}>Create Project</a>

</form>
